generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model UserAccount {
  username String @unique @id
  email String
  password String
  info UserInfo?
  articles Article[]
  comments Comment[]
  isDelated Boolean?

  @@map("user_accounts")
}

model UserInfo {
  author UserAccount  @relation(fields: [username], references: [username], onDelete: Cascade)
  username String @unique @id
  FIO String?
  dateOfBirth DateTime @default(now())
  aboutMe String
  isDelated Boolean?

  @@map("user_info_tables")
}

model Comment {
  id Int @unique @id @default(autoincrement())
  author UserAccount  @relation(fields: [username], references: [username], onDelete: Cascade)
  article Article  @relation(fields: [articleId], references: [id], onDelete: Cascade)
  username String
  articleId Int
  text String
  isDelated Boolean?

  @@map("comments")
}

model Article {
  id Int @unique @id  @default(autoincrement())
  author UserAccount  @relation(fields: [username], references: [username], onDelete: Cascade)
  comments Comment[]
  username String
  title String
  text String
  updatedAt DateTime?
  isDelated Boolean?
  

  @@map("articles")
}